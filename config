bar {
    status_command exec status
    strip_workspace_numbers yes
    separator_symbol "❚"
    tray_padding 0
    colors {
        background #1d2021
        statusline #ffffff
        separator #666666
#                          BORDER  BACKGROUND TEXT
        focused_workspace  #a89984 $bg     $white
        inactive_workspace $bg     $bg     $white
        active_workspace   $bg     $bg     $white
        urgent_workspace   #8b0000 #8b0000    $white
        binding_mode       #8b0000 #8b0000    $white
    }
}

